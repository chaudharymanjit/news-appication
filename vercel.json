{
    "version": 2,
    "builds": [
      {
        "src": "api/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/index.js"
      },
      {
        "src": "^/static/(.*)",
        "dest": "/client/static/$1"
      },
      {
        "src": "/(.*)\\.png",
        "dest": "/client/$1.png"
      },
      {
        "src": "/add-news",
        "dest": "/client/index.html"
      },
      {
        "src": "/",
        "dest": "/client/index.html"
      },
      {
        "src": "/([^/]+)",
        "status": 404,
        "dest": "/client/index.html"
      }
    ]
  }
  